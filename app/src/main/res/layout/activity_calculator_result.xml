<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MainFragment"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_Calc"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/CalcResultActivity_CardView_marginStart"
        android:layout_marginTop="@dimen/CalcResultActivity_CardView_marginTop"
        android:layout_marginEnd="@dimen/CalcResultActivity_CardView_marginEnd"
        android:layout_marginBottom="@dimen/CalcResultActivity_CardView_marginBottom"
        android:elevation="@dimen/main_CardView_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CalcDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/main_CardView_textview_marginStart"
                android:layout_marginTop="@dimen/main_CardView_textview_marginTop"
                android:layout_marginEnd="@dimen/main_CardView_textview_marginEnd"
                android:layout_marginBottom="@dimen/main_CardView_textview_marginBottom"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="13dp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/CalcWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/main_CardView_textview_marginStart"
                android:layout_marginTop="@dimen/main_CardView_textview_marginTop"
                android:layout_marginEnd="@dimen/main_CardView_textview_marginEnd"
                android:layout_marginBottom="@dimen/main_CardView_textview_marginBottom"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="13dp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/CalcMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/main_CardView_textview_marginStart"
                android:layout_marginTop="@dimen/main_CardView_textview_marginTop"
                android:layout_marginEnd="@dimen/main_CardView_textview_marginEnd"
                android:layout_marginBottom="@dimen/main_CardView_textview_marginBottom"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="13dp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/CalcYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/main_CardView_textview_marginStart"
                android:layout_marginTop="@dimen/main_CardView_textview_marginTop"
                android:layout_marginEnd="@dimen/main_CardView_textview_marginEnd"
                android:layout_marginBottom="@dimen/main_CardView_textview_marginBottom"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/moneyperson" />
</LinearLayout>