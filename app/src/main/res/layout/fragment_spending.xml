<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SpendingFrag"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:clickable="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    tools:context=".fragments.MainFragment"
    android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Spending_Head_textview_marginStart"
        android:layout_marginTop="@dimen/Spending_Head_textview_marginTop"
        android:layout_marginEnd="@dimen/Spending_Head_textview_marginEnd"
        android:layout_marginBottom="@dimen/Spending_Head_textview_marginBottom"
        android:gravity="center"
        android:text="@string/Spending_head_textview"
        android:textColor="@color/black"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#000000"
        android:textColorLink="#000000"
        android:textSize="@dimen/Spending_Head_textview_font_size"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Spending_CardView_textview_marginStart"
        android:layout_marginTop="@dimen/Spending_CardView_textview_marginTop"
        android:layout_marginEnd="@dimen/Spending_CardView_textview_marginEnd"
        android:layout_marginBottom="@dimen/Spending_CardView_textview_marginBottom"
        android:elevation="@dimen/main_CardView_elevation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_CardView_textview_marginStart"
            android:layout_marginTop="@dimen/main_CardView_textview_marginTop"
            android:layout_marginEnd="@dimen/main_CardView_textview_marginEnd"
            android:layout_marginBottom="@dimen/main_CardView_textview_marginBottom"
            android:gravity="center"
            android:text="@string/How_many_smoke_per_day"
            android:textColor="@color/black"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#000000"
            android:textColorLink="#000000"
            android:textSize="@dimen/Spending_CardView_textview_font_size"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/HowManyPerDay"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:maxLength="2"
        android:defaultFocusHighlightEnabled="false"
        android:layout_marginStart="@dimen/Spending_EditText_marginStart"
        android:layout_marginTop="@dimen/Spending_EditText_marginTop"
        android:layout_marginEnd="@dimen/Spending_EditText_marginEnd"
        android:layout_marginBottom="@dimen/Spending_EditText_marginBottom"
        android:backgroundTint="@color/black"
        android:textAlignment="center"
        android:textColorHighlight="#009688"
        android:textColorLink="@color/red"
        android:textCursorDrawable="@color/black"
        android:textSize="30dp"
        android:ems="10"
        android:inputType="number" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Spending_CardView_textview_marginStart"
        android:layout_marginTop="@dimen/Spending_CardView_textview_marginTop"
        android:layout_marginEnd="@dimen/Spending_CardView_textview_marginEnd"
        android:layout_marginBottom="@dimen/Spending_CardView_textview_marginBottom"
        android:elevation="@dimen/main_CardView_elevation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_CardView_textview_marginStart"
            android:layout_marginTop="@dimen/main_CardView_textview_marginTop"
            android:layout_marginEnd="@dimen/main_CardView_textview_marginEnd"
            android:layout_marginBottom="@dimen/main_CardView_textview_marginBottom"
            android:gravity="center"
            android:text="@string/How_much_pay_per_pack"
            android:textColor="@color/black"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#000000"
            android:textColorLink="#000000"
            android:textSize="@dimen/Spending_CardView_textview_font_size"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/HowMuchPerPack"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Spending_EditText_marginStart"
        android:layout_marginTop="@dimen/Spending_EditText_marginTop"
        android:layout_marginEnd="@dimen/Spending_EditText_marginEnd"
        android:layout_marginBottom="@dimen/Spending_EditText_marginBottom"
        android:backgroundTint="@color/black"
        android:defaultFocusHighlightEnabled="false"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        android:maxLength="5"
        android:textAlignment="center"
        android:textColorHighlight="#009688"
        android:textColorLink="@color/red"
        android:textCursorDrawable="@color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_spending_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_rounded_button"
        android:foreground="?attr/selectableItemBackground"
        android:text="Submit"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17dp"/>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/adViewSpending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
</LinearLayout>