<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/BlackCoral"
    android:theme="@style/AppTheme.NoActionBar"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/intro_top_textview_marginTop"
        android:layout_marginBottom="@dimen/intro_top_textview_marginBottom"
        android:layout_marginStart="@dimen/intro_top_textview_marginStart"
        android:layout_marginEnd="@dimen/intro_top_textview_marginEnd"
        android:text="@string/app_name_2"
        android:textColor="@color/black"
        android:textSize="@dimen/intro_top_textview_font_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/intro_ImageView_width"
        android:layout_height="@dimen/intro_ImageView_height"
        android:layout_marginTop="@dimen/intro_ImageView_marginTop"
        android:layout_marginBottom="@dimen/intro_ImageView_marginBottom"
        android:layout_marginStart="@dimen/intro_ImageView_marginStart"
        android:layout_marginEnd="@dimen/intro_ImageView_marginEnd"
        app:srcCompat="@drawable/launcher_logo_2" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/intro_CardView_marginStart"
        android:layout_marginTop="@dimen/intro_CardView_marginTop"
        android:layout_marginBottom="@dimen/intro_CardView_marginBottom"
        android:layout_marginEnd="@dimen/intro_CardView_marginEnd"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/string_university_of_peloponnese"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/intro_CardView_textview_marginTop"
            android:layout_marginEnd="@dimen/intro_CardView_textview_marginEnd"
            android:layout_marginStart="@dimen/intro_CardView_textview_marginStart"
            android:layout_marginBottom="@dimen/intro_CardView_textview_marginBottom"
            android:lineSpacingExtra="2dp"
            android:textSize="@dimen/intro_CardView_textview_font_size"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>