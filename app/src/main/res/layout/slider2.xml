<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/BlackCoral"
    android:theme="@style/AppTheme.NoActionBar"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/intro_ImageView2_width"
        android:layout_height="@dimen/intro_ImageView2_height"
        android:layout_marginTop="@dimen/intro_ImageView2_marginTop"
        android:layout_marginBottom="@dimen/intro_ImageView2_marginBottom"
        android:layout_marginStart="@dimen/intro_ImageView2_marginStart"
        android:layout_marginEnd="@dimen/intro_ImageView2_marginEnd"
        app:srcCompat="@drawable/personsmoking" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/intro_CardView_marginStart"
        android:layout_marginTop="@dimen/intro_CardView_marginTop"
        android:layout_marginBottom="@dimen/intro_CardView_marginBottom"
        android:layout_marginEnd="@dimen/intro_CardView_marginEnd"
        android:elevation="10dp">

        <TextView
            android:id="@+id/slider2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/intro_CardView_textview_marginStart"
            android:layout_marginTop="@dimen/intro_CardView_textview_marginTop"
            android:layout_marginEnd="@dimen/intro_CardView_textview_marginEnd"
            android:layout_marginBottom="@dimen/intro_CardView_textview_marginBottom"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="@string/this_app_will_help_you_lower"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/intro_CardView_textview_font_size"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</LinearLayout>